/* pages/translate/translate.wxss */

.body {
    position: absolute;
    height: 100%;
    width: 100%;
}

.search-group {
    position: absolute;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 84%;
    height: 70rpx;
    margin-left: 5%;
    margin-top: 5%;
    border-radius: 35rpx;
    background: #f7f7f7;
    align-items: center;
    padding-left: 3%;
    padding-right: 3%;
}

.search-group image {
    height: 36rpx;
    width: 38rpx;
    align-self: center;
}

.search-group input {
    width: 87%;
    margin-left: 3%;
    font-size: 26rpx;
}

.camera {
    position: fixed;
    height: 90rpx;
    width: 90rpx;
    right: 0px;
    bottom: 0px;
    margin: 60rpx;
}

.no-result-container {
    position: absolute;
    width: 100%;
    height: 80%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.no-result-container image {
    height: 230rpx;
    width: 300rpx;
}

.no-result-container text {
    font-size: 27rpx;
    color: #bbb;
    margin: 30rpx;
}

.top-view {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    width: 100%;
    /* height: 25%; */
    padding-bottom: 15rpx;
    border-bottom: 7rpx solid #f7f7f7;
}

.top-view-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 85%;
    height: 65rpx;
    font-size: 40rpx;
    margin-top: 125rpx;
}

.top-view-header text {
    font-weight: 600;
    color: #0394cb;
}

.top-view-header image {
    height: 35rpx;
    width: 35rpx;
}

.top-view-content {
    display: flex;
    align-items: center;
    width: 85%;
    height: 50rpx;
}

.top-view-content text {
    font-size: 26rpx;
    margin-right: 15rpx;
}

.top-view-content image {
    height: 34rpx;
    width: 34rpx;
    margin-left: 7rpx;
}

.center-view {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    border-bottom: 7rpx solid #f7f7f7;
}

.center-view-header {
    display: flex;
    align-items: center;
    width: 85%;
    height: 40rpx;
    margin-top: 30rpx;
    font-size: 33rpx;
    font-weight: 600;
    color: #0394cb;
}

.center-view-content {
    width: 85%;
    display: flex;
    flex-direction: column;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
}

.dotted-line {
    width: 85%;
    border-bottom: 1rpx dashed #ccc;
}

.center-view-content text {
    display: flex;
    align-items: center;
    width: 100%;
    margin-top: 5rpx;
    margin-bottom: 5rpx;
    /* height: 50rpx; */
    font-size: 28rpx;
    color: #222;
}

.bottom-view {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding-top: 12rpx;
    padding-bottom: 17rpx;
}

.bottom-view-header {
    display: flex;
    align-items: center;
    width: 85%;
    height: 40rpx;
    margin-top: 30rpx;
    font-size: 33rpx;
    font-weight: 600;
    color: #0394cb;
}

.bottom-view-content {
    width: 85%;
    display: flex;
    flex-direction: column;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
}

.bottom-view-content text {
    display: flex;
    align-items: center;
    width: 100%;
    margin-top: 5rpx;
    margin-bottom: 5rpx;
    /* height: 50rpx; */
    font-size: 28rpx;
    color: #222;
}
