/* pages/myquestion/myquestion.wxss */

/* 默认图 */

.default {
    position: absolute;
    height: 500rpx;
    width: 500rpx;
    top: 400rpx;
    left: 50%;
    transform: translate(-50%, -50%);
}

page {
    position: absolute;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #f7f7f7;
    color: #666;
}

.container {
    display: flex;
    flex-direction: column;
    width: 88%;
    /* height: 395rpx; */
    background: #fff;
    margin-top: 40rpx;
    border-radius: 10rpx;
}

.header {
    display: flex;
    justify-content: space-between;
    width: 96%;
    height: 75rpx;
    /* border: 1rpx solid #ccc; */
    font-size: 22rpx;
    color: #666;
    padding-left: 2%;
    padding-right: 2%;
}

.header-left {
    display: flex;
    align-items: center;
}

.header-left image {
    height: 45rpx;
    width: 45rpx;
    margin-right: 7rpx;
    border-radius: 50%;
}

.header-left .text-second {
    color: red;
}

.header-right {
    display: flex;
    align-items: center;
}

.header-right image {
    height: 35rpx;
    width: 35rpx;
}

.title {
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    /* line-height: rpx; *//* display: flex; */
    width: 96%;
    /* height: 55rpx; */
    font-size: 20rpx;
    color: #666;
    padding-left: 2%;
    padding-right: 2%;
    margin-bottom: 10rpx;
}

.pic {
    /* width: 100%; */
    height: 213rpx;
}

.footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 96%;
    height: 48rpx;
    padding-left: 2%;
    padding-right: 2%;
}

.footer-left {
    font-size: 19rpx;
}

.footer-right {
    width: 70rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 21rpx;
}

.footer-right image {
    height: 25rpx;
    width: 25rpx;
}
